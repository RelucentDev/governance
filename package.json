{
  "name": "@relucent.dev/pkg",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build --all",
    "format": "prettier --check .",
    "format-dev": "prettier --write .",
    "lint": "nx run-many --target=lint --all && npm-run-all lint:*",
    "lint:alex": "alex .",
    "lint:cspell": "cspell .",
    "lint:jscpd": "jscpd --config .jscpd.json",
    "lint:markdown-link-check": "find . -name \\*.md -not -wholename '**/node_modules/*' -print0 | xargs -0 -n1 markdown-link-check --config .mlc_config.json",
    "lint:markdownlint": "markdownlint '**/*.md' --ignore node_modules"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@nx/js": "17.1.3",
    "@relucent.dev/prettier-config": "*",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "lerna": "^8.0.0",
    "nx": "17.1.3",
    "prettier": "^3.1.0"
  }
}
